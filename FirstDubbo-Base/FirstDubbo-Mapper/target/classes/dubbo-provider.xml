<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
	
	<import resource="classpath:applicationContext-mapper.xml"/>
	
	<!-- 接入dubbo的应用程序名称 -->
	<dubbo:application name="demo-provider" />
    <!-- 配置外部化 -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"></dubbo:registry>
	<dubbo:config-center address="zookeeper://127.0.0.1:2181"></dubbo:config-center>
	<dubbo:metadata-report address="zookeeper://127.0.0.1:2181"></dubbo:metadata-report>

	<!-- 用dubbo协议在20880端口暴露服务 -->
	<dubbo:protocol name="dubbo" port="20880" />

	<!-- 声明需要暴露的服务接口 -->
	<dubbo:service
		interface="com.ljp.mapper.DepartmentMapper" ref="departmentMapper" timeout="10000"/>
	<dubbo:service
		interface="com.ljp.mapper.WorkerMapper" ref="workerMapper" timeout="10000"/>
	<dubbo:service
		interface="com.ljp.mapper.ReceiptsDetailsMapper" ref="receiptsDetailsMapper" timeout="10000"/>
	<dubbo:service
		interface="com.ljp.mapper.ReceiptsRecordMapper" ref="receiptsRecordMapper" timeout="10000"/>
	<dubbo:service
		interface="com.ljp.mapper.ReceiptsMapper" ref="receiptsMapper" timeout="10000"/>
	
</beans>
